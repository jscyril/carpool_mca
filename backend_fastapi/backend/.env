# College Carpool Backend Environment Configuration
# Copy this to .env and fill in your values

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME="College Carpool API"
DEBUG=true

# =============================================================================
# DATABASE
# =============================================================================
# Format: postgresql+asyncpg://user:password@host:port/database?ssl=require
DATABASE_URL=postgresql+asyncpg://postgres.yszyaodwqvbrxmouuzhm:MkLi2BHONW7WkYRX@aws-1-ap-south-1.pooler.supabase.com:5432/postgres

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# OTP SETTINGS
# =============================================================================
OTP_LENGTH=6
OTP_EXPIRE_MINUTES=5
OTP_MAX_ATTEMPTS=3
OTP_RESEND_COOLDOWN_SECONDS=60
OTP_RATE_LIMIT_PER_HOUR=5

# Verification token expiry (minutes)
PHONE_VERIFIED_TOKEN_EXPIRE_MINUTES=30
EMAIL_VERIFIED_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# COLLEGE EMAIL DOMAINS (comma-separated)
# =============================================================================
ALLOWED_EMAIL_DOMAINS=["christuniversity.in", "res.christuniversity.in"]

# =============================================================================
# SMS SERVICE
# =============================================================================
# Options: "console" (dev), "msg91", "twilio"
SMS_PROVIDER=console
SMS_API_KEY=
SMS_SENDER_ID=CARPOOL

# =============================================================================
# EMAIL SERVICE
# =============================================================================
# Options: "console" (dev), "smtp"
